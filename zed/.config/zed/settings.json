// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "edit_predictions": {
    "disabled_globs": ["config/*", ".envrc", "envs/*"],
    "mode": "eager",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_assistant": false
  },
  "assistant": {
    "default_model": {
      "provider": "anthropic",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  },
  "vim_mode": true,
  "theme": {
    "light": "Kanagawa Lotus",
    "dark": "Kanagawa Wave"
  },
  "buffer_font_size": 15,
  "buffer_font_family": "Iosevka Curly Slab",
  "ui_font_size": 16,
  "format_on_save": "off",
  "formatter": "language_server",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "buffer_line_height": {
    "custom": 1.35
  },
  "features": {
    "edit_prediction_provider": "zed",
    "copilot": false
  },
  "tabs": {
    "git_status": true,
    "file_icons": true
  },
  "gutter": {
    "folds": false,
    "code_actions": false
  },
  "languages": {
    "Elixir": {
      "language_servers": ["elixir-ls", "tailwindcss-language-server", "!next-ls"]
    },
    "Python": {
      "language_servers": [
        "pyright",
        "ruff",
        "!pylsp"
      ],
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  },
  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 2,
    "coloring": "indent_aware"
  },
  "seed_search_query_from_cursor": "selection",
  "file_types": {
    "Dockerfile": [
      "Dockerfile*"
    ],
    "Shell Script": [
      ".envrc"
    ]
  "show_edit_predictions": false,
  }
}
