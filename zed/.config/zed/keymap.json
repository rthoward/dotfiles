[
  {
    "bindings": {
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-l": "workspace::ActivatePaneRight",

      "cmd-l": "outline::Toggle"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "cmd-1": ["pane::ActivateItem", 0],
      "cmd-2": ["pane::ActivateItem", 1],
      "cmd-3": ["pane::ActivateItem", 2],
      "cmd-4": ["pane::ActivateItem", 3],
      "cmd-5": ["pane::ActivateItem", 4],
      "cmd-6": ["pane::ActivateItem", 5],
      "cmd-7": ["pane::ActivateItem", 6],
      "cmd-8": ["pane::ActivateItem", 7],
      "cmd-9": ["pane::ActivateItem", 8]
    }
  },
  {
    "context": "Editor && (vim_mode == normal || vim_mode == visual) && (vim_operator == none || vim_operator == n) && !VimWaiting",
    "bindings": {
      "space space": "file_finder::Toggle",

      "space f s": "workspace::Save",
      "space f f": "editor::Format",

      "space w .": "pane::SplitDown",
      "space w ,": "pane::SplitRight",
      "space w l": "workspace::ActivateNextPane",
      "space w h": "workspace::ActivatePreviousPane",

      "space g g": "git_panel::ToggleFocus",
      "space g o": "editor::OpenPermalinkToLine",
      "space g y": "editor::CopyPermalinkToLine",
      "space g n": "editor::GoToHunk",
      "space g p": "editor::GoToPreviousHunk",
      "space g h n": "editor::GoToHunk",
      "space g h p": "editor::GoToPreviousHunk",
      "space g h s": "git::ToggleStaged",
      "space g h d": "git::Restore",
      "space g d": "git::Diff",

      "space t t": "task::Spawn",
      "space t r": "task::Rerun",

      "space a i": "assistant::InlineAssist",
      "space a a": "assistant::ToggleFocus"
    }
  },
]
